# =============================================================================
# Cebus - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit your .env file - it is already in .gitignore.

# =============================================================================
# Provider API Keys (at least one required)
# =============================================================================

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic - https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini - https://aistudio.google.com/apikey
GOOGLE_API_KEY=AIzaSy...
# Alternative key name for Gemini (used if GOOGLE_API_KEY is not set)
# GEMINI_API_KEY=AIzaSy...

# GitHub Copilot (uses GitHub personal access token)
# GITHUB_TOKEN=ghp_...

# =============================================================================
# Provider Configuration (optional)
# =============================================================================

# Custom base URLs (for proxies or self-hosted endpoints)
# OPENAI_BASE_URL=https://api.openai.com/v1
# ANTHROPIC_BASE_URL=https://api.anthropic.com

# Ollama local server URL (default: http://localhost:11434)
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Session Timeouts (optional)
# =============================================================================
# Format: number + unit (s=seconds, m=minutes, h=hours)
# Examples: 30s, 5m, 1h

# OPENAI_SESSION_TIMEOUT=30m
# ANTHROPIC_SESSION_TIMEOUT=5m
# GEMINI_SESSION_TIMEOUT=1h

# =============================================================================
# Provider Features (optional)
# =============================================================================

# OpenAI server-side state for conversation continuity (default: true)
# OPENAI_ENABLE_SERVER_STATE=true

# Anthropic prompt caching to reduce costs (default: true)
# ANTHROPIC_ENABLE_CACHING=true

# Gemini interaction storage (default: true)
# GEMINI_ENABLE_INTERACTION_STORAGE=true

# =============================================================================
# Debug (optional)
# =============================================================================

# Enable debug logging to .cebus/debug.log
# CEBUS_DEBUG=true
# DEBUG=true
